{
  "name": "enhanced-ado-mcp-server",
  "version": "1.5.1",
  "private": false,
  "type": "module",
  "description": "Enhanced ADO MCP Server - Azure DevOps work item management via Model Context Protocol with AI-powered tools, REST API integration, and intelligent automation",
  "main": "dist/index.js",
  "bin": {
    "enhanced-ado-msp": "./dist/index.js"
  },
  "homepage": "https://github.com/AmeliaRose802/enhanced-ado-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmeliaRose802/enhanced-ado-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/AmeliaRose802/enhanced-ado-mcp/issues"
  },
  "author": {
    "name": "Amelia Payne",
    "url": "https://github.com/AmeliaRose802"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "prompts/**/*",
    "resources/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "azure-devops",
    "ado",
    "ai-tools",
    "copilot",
    "claude",
    "work-items",
    "automation",
    "devops",
    "project-management",
    "ai-agent",
    "rest-api",
    "typescript"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copy-resources",
    "copy-resources": "node -e \"require('fs').cpSync('resources', 'dist/resources', {recursive: true})\" && node -e \"require('fs').cpSync('prompts', 'dist/prompts', {recursive: true})\" && node -e \"require('fs').cpSync('src/utils/module-dir.mjs', 'dist/utils/module-dir.mjs')\"",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts test/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.ts\" \"benchmarks/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.ts\" \"benchmarks/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='test/unit'",
    "test:integration": "jest --testPathPattern='test/integration'",
    "test:dev": "npm run build && tsx src/test/run-tests.ts",
    "test:smoke": "npm run build && node dist/test/smoke-test.js",
    "test:final": "npm run build && node dist/test/final-test.js",
    "benchmark": "tsx benchmarks/index.ts",
    "benchmark:query": "tsx benchmarks/query-performance.bench.ts",
    "benchmark:bulk": "tsx benchmarks/bulk-operations.bench.ts",
    "benchmark:ai": "tsx benchmarks/ai-tools.bench.ts",
    "generate-openapi": "tsx scripts/generate-openapi.ts",
    "generate-docs": "npm run generate-openapi",
    "prepublishOnly": "npm run build"
  },
  "preferGlobal": false,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.19.19",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "tinybench": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
