{
  "name": "enhanced-ado-mcp-server",
  "version": "1.3.1",
  "private": false,
  "type": "module",
  "description": "Enhanced ADO MCP Server - Azure DevOps work item management via Model Context Protocol with AI-powered tools and automation",
  "main": "dist/index.js",
  "bin": {
    "enhanced-ado-msp": "./dist/index.js"
  },
  "homepage": "https://github.com/AmeliaRose802/enhanced-ado-mcp",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AmeliaRose802/enhanced-ado-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/AmeliaRose802/enhanced-ado-mcp/issues"
  },
  "author": {
    "name": "Amelia Payne",
    "url": "https://github.com/AmeliaRose802"
  },
  "license": "MIT",
  "files": [
    "dist/**/*",
    "ado_scripts/**/*",
    "prompts/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "azure-devops",
    "ado",
    "ai-tools",
    "copilot",
    "claude",
    "work-items",
    "automation",
    "devops",
    "project-management",
    "ai-agent",
    "powershell"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='test/unit'",
    "test:integration": "jest --testPathPattern='test/integration'",
    "test:dev": "npm run build && tsx src/test/run-tests.ts",
    "test:smoke": "npm run build && node dist/test/smoke-test.js",
    "test:final": "npm run build && node dist/test/final-test.js",
    "prepublishOnly": "npm run build"
  },
  "preferGlobal": false,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.1",
    "yargs": "^17.7.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.33",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.0",
    "typescript": "^5.4.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
