{
  "mcpServers": {
    "enhanced-ado-mcp": {
      "command": "node",
      "args": [
        "${workspaceFolder}/mcp_server/dist/index.js"
      ],
      "env": {
        "PWSH_PATH": "pwsh",
        "MCP_HYBRID": "1"
      }
    }
  },
  "chat.mcp.serverSampling": {
    "ADO-Work-Item-MSP/.vscode/mcp.json: enhanced-ado-mcp": {
      "allowedDuringChat": true,
      "allowedModels": [
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5-mini"
      ]
    }
  }
}