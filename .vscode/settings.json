{
  "mcpServers": {
    "enhanced-ado-msp": {
      "command": "node",
      "args": [
        "${workspaceFolder}/mcp_server/dist/index.js"
      ],
      "env": {
        "PWSH_PATH": "pwsh",
        "MCP_HYBRID": "1"
      }
    }
  },
  "chat.mcp.serverSampling": {
    "ADO-Work-Item-MSP/.vscode/mcp.json: enhanced-ado-msp": {
      "allowedDuringChat": true
    }
  }
}